# Production Environment Configuration with SQLite
# Copy this file to .env.prod and update with your actual values

# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-here
DJANGO_SETTINGS_MODULE=backend.settings
ALLOWED_HOSTS=.onrender.com,.railway.app,.ondigitalocean.app,algotrading-backend.onrender.com,localhost,127.0.0.1

# Database Configuration (SQLite - no additional config needed)
# DATABASE_URL not needed for SQLite - uses local db.sqlite3 file

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://algotrading-frontend.onrender.com,https://algotrading-frontend.railway.app,https://algotrading-frontend.ondigitalocean.app,http://localhost:3000,http://localhost:5173

# CORS Settings
CORS_ALLOWED_ORIGINS=https://algotrading-frontend.onrender.com,https://algotrading-frontend.railway.app,https://algotrading-frontend.ondigitalocean.app,http://localhost:3000,http://localhost:5173

# Trading API Configuration
KITE_API_KEY=your-kite-api-key
KITE_API_SECRET=your-kite-api-secret

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO

# Frontend URLs
BACKEND_URL=https://algotrading-backend.onrender.com
FRONTEND_URL=https://algotrading-frontend.onrender.com
